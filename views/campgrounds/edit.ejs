<%layout('/layouts/boilerplate')%> 
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" value="<%=campground.title%> " id="title" required>
                    <div class="valid-feedback">Gr8</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]"  value="<%=campground.location%>" id="location" required>
                    <div class="valid-feedback">Good</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" name="campground[price]" aria-label="Username" aria-describedby="price-label"  value="<%=campground.price%>" required>
                        <div class="valid-feedback">Noyce</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="location">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="location" required><%=campground.description%></textarea>
                    <div class="valid-feedback">Osm</div>
                </div>
                <div class="">
                    <% campground.images.forEach((img,i)=>{ %>
                        <img class="img-thumbnail" src="<%=img.thumbnail%>" alt="" srcset="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%=img.filename%>" id="image-<%=i%>">
                        </div>
                        <label for="image-<%=i%>">&#10060; Delete</label>
                    <% }) %>
                </div>
                <button class="btn btn-outline-primary mb-3">Update Campground</button> 
            </form>
            <footer class="mb-5">
                <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
            </footer>    
        </div>
    </div>